{{- $pages := where .Site.RegularPages "Section" "blog" -}}
[
{{- range $i, $p := $pages -}}
  {{- if $i }},{{ end -}}
  {
    "slug": "{{ $p.File.BaseFileName }}",
    "title": {{ $p.Title | jsonify }},
    "excerpt": {{ $p.Params.excerpt | jsonify }},
    "date": "{{ $p.Date.Format "2006-01-02" }}",
    "author": {{ $p.Params.author | jsonify }},
    "categories": {{ $p.Params.categories | jsonify }},
    "coverImage": {{ $p.Params.coverImage | jsonify }},
    "content": {{ $p.Plain | jsonify }}
  }
{{- end -}}
]
