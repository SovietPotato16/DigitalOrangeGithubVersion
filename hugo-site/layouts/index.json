{
    "posts": [
        {{ range $index, $post := where .Site.RegularPages "Type" "posts" }}
        {{ if $index }}, {{ end }}
        {
            "id": "{{ .File.UniqueID }}",
            "title": {{ .Title | jsonify }},
            "date": "{{ .Date.Format "2006-01-02" }}",
            "author": {
                "name": {{ .Params.author.name | jsonify }},
                "bio": {{ .Params.author.bio | jsonify }},
                "avatar": {{ .Params.author.avatar | jsonify }}
            },
            "categories": {{ .Params.categories | jsonify }},
            "tags": {{ .Params.tags | jsonify }},
            "coverImage": {{ .Params.coverImage | jsonify }},
            "summary": {{ .Params.summary | jsonify }},
            "content": {{ .Content | jsonify }},
            "slug": "{{ .File.ContentBaseName }}"
        }
        {{ end }}
    ]
} 